                    .form-group.form-wrap.d-flex.flex-wrap.justify-between.pb-0(v-show="currentAddress == 'currentAddress2'")
                        .w50-M
                            .form-group
                                select.custom-select(name="")
                                    option(value="") 台北市
                                    option(value="") 新北市
                        .w50-M
                            .form-group
                                select.custom-select(name="")
                                    option(value="") 中正區
                                    option(value="") 汐止區
                    .form-group(v-show="currentAddress == 'currentAddress2'")
                        input.form-control(id="", type="text", placeholder="請輸入地址" ,aria-describedby="idHelp") 
                        

                    .form-group.pb-0
                        label.form-label(for="") 現居電話
                    .form-radio.form-group
                        input.styled-radio(v-model="currentTel", value="currentTel1", id="tel",type="radio", name="radio-group-2", checked="checked")
