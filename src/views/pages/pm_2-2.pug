
extends ../includes/hongbao/_layout.pug

block title
    title pm_2-2

block scss
    link(rel='stylesheet' href= assets + '/styles/components.css')
    link(rel='stylesheet' href= assets + '/styles/jiaofei.css')

include ../includes/jiaofei/ui-jiaofei.pug
include ../includes/components.pug
block main
    div#appJiaofei
        .drawer(class='show', :class=("{ 'show' : drawerCreditCommonCreate}"),data-drawer='新增常用號碼')
            .drawer-container
                div.drawer-head.mb-24
                    h5.f20.f_b 新增常用信用卡
                    a.f_gold.f_b(@click="drawerCreditCommonCreate = false", href="javascript:void(0)") 取消
                div.drawer-content
                    div.create-type.mb-16
                        p.title.mb-8 銀行代碼
                        select.cw-dropdown.mb-16(required)
                            option(value="" disabled) 請選擇銀行代碼
                            option(value="004" selected) 004 台灣銀行
                            option(value="005") 005 土地銀行
                            option(value="006") 006 合作金庫
                            option(value="007") 007 第一銀行
                            option(value="008") 008 華南銀行
                            option(value="009") 009 彰化銀行
                            option(value="011") 011 上海商銀
                    div.create-type.mb-16
                        p.title.mb-8 信用卡卡號
                        input.jf-input.jf-credit-number(type="text", v-model="ccCreditNumber", placeholder='請輸入信用卡卡號')
                    div.create-type.mb-16
                        p.title.mb-8 卡片名稱
                        input.jf-input(type="text", v-model="ccCreditName", placeholder='請輸入卡片名稱')
                a.btn_gold(@click="drawerCreditCommonCreate = false", :class=("{ 'btn_grey' : !(ccCreditName!=''&&ccCreditNumber.length>=25)}"), href="javascript:void(0)") 確認


block js
    script(src= public + '/lib/js/cleave.min.js' defer)
    script(src= public + '/lib/js/jquery-1.12.4.min.js' defer)
    script(src= public + '/lib/js/hammer.min.js' defer)
    script(src= public + '/lib/js/jquery.hammer.js' defer)
    script(src= assets + '/js/jiaofei.bundle.js' defer)
    script(src= assets + '/js/components.bundle.js' defer)


