extends ../../includes/_layout_open.pug

block title
    title 臨櫃驗證

block scss
    

block main
    .view-992
        #appOpen  
            .bg-marble
                .open-progress
                    .progress-line(style="width:45%")
                .open-wrapper
                    section.d-flex.step-front-wrapper
                        .step-front-words
                            h1.main-title.main-title_black.mt-2.mb-1 臨櫃驗證
                            p.main-sub-txt 若要使用臨櫃方式驗證，請依序完成以下步驟
                        .step-front-container
                            .step-check
                                ul.step-check-ul  
                                    li.step-check-list 
                                        span.step-check-icon 
                                            img(src=assets + "/images/open/frontDesk/step-1.svg", alt="step 1")
                                        span.step-check-status
                                            span.step-check-status_ttl 01
                                            span.step-check-status_des 先透過手機完成個人資料填寫
                                    li.step-check-list 
                                        span.step-check-icon
                                            img(src=assets + "/images/open/frontDesk/step-2.svg", alt="step 2")
                                        span.step-check-status
                                            span.step-check-status_ttl 02
                                            span.step-check-status_des 30日內帶雙證件至鄰近永豐銀行進行身分驗證
                                    li.step-check-list
                                        span.step-check-icon
                                            img(src=assets + "/images/open/frontDesk/step-3.svg", alt="step 3")
                                        span.step-check-status
                                            span.step-check-status_ttl 03
                                            span.step-check-status_des 完成開戶
                        //- mobile
                        hr.bg-grey.mb-24.mt-24
                        .form-check.form-group
                            input.styled-checkbox(id="agreeOpen",type="checkbox", checked="checked")
                            label.styled-label(for="agreeOpen") 同意開啟金融卡非約定轉帳功能
                            
                    .bottom-area-box
                        .bottom-area.center.align-bottom
                            button.btn.btn-primary(type="button") 下一步            
block js