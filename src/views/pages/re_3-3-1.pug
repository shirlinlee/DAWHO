
extends ../includes/hongbao/_layout.pug

block title
    title re_3-3

block scss
    link(rel='stylesheet' href= assets + '/styles/components.css')
    link(rel='stylesheet' href= assets + '/styles/hongbao.css')

include ../includes/hongbao/ui.pug
include ../includes/components.pug
block main
    style(type='text/css').
        body{
            background-image: linear-gradient(to bottom, #36363b 15%, #1f1f23);
        }
    div#appHongbao
        +_header("紅包紀錄", 'black')
        - var status = '已領取'
        div#appHongbaoContent
            div.hongbaoRecord
                nav.navbar
                    ul.menu
                        li.item(class=(status==='待領取') ? 'active' : '')
                            a 待領取
                        li.item(class=(status==='已發送') ? 'active' : '')
                            a 已發送
                        li.item(class=(status==='已領取') ? 'active' : '')
                            a 已領取
                div.container
                    div.empty
                        img(src=assets+"/images/hongbao/dark.svg" alt="")
                        p.mt-24 還沒有領過紅包哦！

block js
    script(src= public + '/lib/js/jquery-1.12.4.min.js' defer)
    script(src= assets + '/js/hongbao.bundle.js' defer)
    script(src= assets + '/js/components.bundle.js' defer)


