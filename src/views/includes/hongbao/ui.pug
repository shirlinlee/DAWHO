mixin _header(text, color)
    header(class=color)
        img.back(src=assets+"/images/icon/arrow-left.svg" alt="")
        p.title #{text}

mixin _contentInfo()
    div#appHongbaoContent
        div.hongbaoInfo
            p.infoTitle 我吃土，你發財！
            div.infoForm
                div.row
                    div.col.A
                        p 發放方式
                    div.col.B
                        p 隨機分配
                div.row
                    div.col.A
                        p 總金額
                    div.col.B
                        p 新臺幣 5,000
                div.row
                    div.col.A
                        p 紅包數量
                    div.col.B
                        p 5
            hr.divide
            p.infoPwdTitle 簡訊動態密碼
            p.infoPwdWords 已發送至0988***652，請至手機上確認
            div.infoPwdForm
                div.row
                    div.col.A
                        input.disable(placeholder='請輸入簡訊動態密碼')
                    div.col.B
                        p 重新發送
            p.warning 簡訊驗證碼輸入錯誤
        div.contentBtn.mt-32
            button.btnDefault.disable 去發紅包

mixin _contentSend()
    div#appHongbaoContent.info
        div.hongbaoSend
            .containerSend
                //- img.bg(src=assets+"/images/hongbao/pattern/1/6.png" alt="")
                .pattern
                    .top
                        p 我吃土，你發財！
                    .middle
                        .l

                        .c
                            .a.mt-24
                                p.left 總金額
                                p.center 紅包數量
                                p.right 5
                            .b
                                p.left.fw-30 5,000
                                p.center 每包金額
                                p.right.fw-16 隨機
                        .r

                    .bottom
                        .l

                        .c

                        .r

        div.contentBtn.mt-12
            button.btnDefault.mb-16 發送紅包連結給大家
            button.btnSolid 發送給指定DAWHO好友

mixin _contentGrab()
    div#appHongbaoContent.grab
        div.hongbaoGrab.mt-32
            .container
                p.name 來搶 吳民 的紅包！
                p.title 我吃土，你發財！
                button.submit
                    span 搶紅包！
            p.next_time.mt-16 下次領

//- status: success, fail, already
mixin _contentReceive(status)
    div#appHongbaoContent.info
        div.hongbaoReceive
            .card
                .card-totem
                    p 我吃土，你發財！
                .card-package
                    .card-package-up
                        .card-package-up-left
                        .card-package-up-center
                            if status == 'success' || status == 'already'
                                .card-package-up-center-success.mt-24
                                    if status == 'success'
                                        p.name 恭喜搶到 吳民 的紅包！
                                    else if status == 'already'
                                        p.name 你已領過 吳民 的紅包！
                                    p.price 新臺幣 50
                            else
                                .card-package-up-center-fail.mt-24
                                    p.fail-big  好可惜...
                                    p.fail-des 吳民 的紅包已被搶完了
                        .card-package-up-right
                    .card-package-down
                        .card-package-down-left
                        .card-package-down-center
                        .card-package-down-right
            if status == 'success'
                p.des 紅包已自動入帳至DAWHO囉！
                button.btnDefault.mb-16.mt-32 跟朋友分享！
            else
                button.btnDefault.mb-16.mt-32 前往紅包紀錄

mixin _contentDetail()
    div#appHongbaoContent
        div.hongbaoDetail
            nav.navbar
                ul.menu
                    li.item
                        p 待領取
                    li.item.active
                        p 已發送
                    li.item
                        p 已領取
            div.container
                div.record
                    div.record-up
                        img.bg(src=assets+"/images/hongbao/pattern2/1/4.png" alt="")
                        div.money
                            p.title 我吃土，你發財！
                            div.total
                                div.total-left
                                div.total-center
                                    p 總金額
                                div.total-right
                            p.price 新臺幣 2,000
                    div.record-content
                        p 待續
                div.record
                    p 2

