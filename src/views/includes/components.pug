mixin switch(status)
    label.toggle
        input.toggle-checkbox(type='checkbox')
        .toggle-switch


mixin select(list,target)
    select.cw-select
        each data,i in list
            option(value=data selected=(target==i)?true:false) #{data}

mixin dropdown(list,placeholder)
    select.cw-dropdown(required)
        option(value="" selected disabled) #{placeholder}
        each data in list
            option(value=data) #{data}

mixin check(id,label,isChecked)
    label.cw-check
        input(id='check_'+id,type='checkbox', checked=isChecked)
        label(for='check_'+id) #{label}

