
extends ../includes/jiaofei/_layout.pug

block title
    title pm_2-2

block scss
    link(rel='stylesheet' href= assets + '/styles/components.css')
    link(rel='stylesheet' href= assets + '/styles/jiaofei.css')

include ../includes/jiaofei/ui-jiaofei.pug
include ../includes/components.pug
block main
    div#appJiaofei
        .drawer(class='show', :class=("{ 'show' : drawerCreditCommonCreate}"))
            .drawer-container
                div.drawer-head.mb-24
                    h5.f20.f_b 新增常用信用卡
                    a.f_gold.f_b(@click="drawerCreditCommonCreate = false" href="javascript:void(0)") 取消
                div.drawer-content
                    div.create-type.mb-16
                        p.title.mb-8 銀行代碼
                        input.jf-input.bank-code(type="text" readonly :value='valueCommonBank' @click.prevent="drawerCommonBankCode = true" placeholder='請選擇銀行代碼')
                    div.create-type.mb-16
                        p.title.mb-8 信用卡卡號
                        input.jf-input.jf-credit-number(type="text" v-model="ccCreditNumber" placeholder='請輸入信用卡卡號')
                    div.create-type.mb-16
                        p.title.mb-8 卡片名稱
                        input.jf-input(type="text" v-model="ccCreditName" placeholder='請輸入卡片名稱')
                a.btn_gold(@click="drawerCreditCommonCreate = false", :class=("{ 'btn_grey' : !(ccCreditName!=''&&ccCreditNumber.length>=25)}"), href="javascript:void(0)") 確認

        .drawer(class='', :class=("{ 'show' : drawerCommonBankCode}"))
            .drawer-container
                div.drawer-head.mb-24
                    h5.f20.f_b 銀行代碼
                    a.f_gold.f_b(@click="drawerCommonBankCode = false" href="javascript:void(0)")
                div.drawer-content
                    div.search-input.mb-24
                        span.bank-code-search-icon(:class=("{'close':searchCommonValue!=''}"), @click="searchCommonValue = ''")
                        input.jf-input.bank-code-search(type="text" v-model="searchCommonValue" placeholder='搜尋銀行代碼')

                    ul.bank-code-list
                        li(v-for="(item, index) in BankList.filter(item => (item.code+item.name).indexOf(searchCommonValue) > -1)")
                            p(@click="valueCommonBank = `${item.code} ${item.name}`;drawerCommonBankCode = false;")
                                span {{item.code}}
                                | {{item.name}}
                a.btn_gold(@click="valueCommonBank=''; drawerCommonBankCode = false", :class=(""), href="javascript:void(0)") 關閉

