    #appOpen
        .view
            button.btn.btn-primary(@click="openModalDark('#staticBackdrop')" type="button",data-toggle="modal", data-target="#staticBackdrop") open modal
        
 
        //- lightbox
        .modal-backdrop-dark.fade
