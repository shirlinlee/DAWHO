extends ../includes/_layout.pug

block title
    title 完整優惠

block scss
    link(rel='stylesheet', href= public +'/lib/styles/swiper.min.css')
    link(rel='stylesheet', href= assets + '/styles/discount.css')

block main
    div#appDiscount
        h1.header 等級
        img.badge(src=assets +"/images/badge/dada_black.png", width="100", alt="")

        h2.f18
            span 其他等級


        .swiper-container
            .swiper-wrapper
                .swiper-slide
                    .bg_white.other
                        br
                    span.line.grey
                        font

                .swiper-slide
                    .bg_white.current
                        br

                    span.line.grey

        .btn_wrapper
            a.btn_gold(href="#") 升級攻略
            a.btn_gold_light(href="#")
                span 歷史等級


block js
    script(src= public +'/lib/js/swiper.min.js' defer)
    script(src=assets + '/js/discount.bundle.js' defer)
