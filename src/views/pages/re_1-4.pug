include ../includes/components.pug
block main
    div#re
        h1.header
                .back 準備紅包
        .swiper-container.red_kv
            .swiper-wrapper
                .swiper-slide
                    .text
                        h5.f20.f_white 我吃土，你發財！
                        img(src=assets+"/images/icon/edit.svg", alt="")
                    img(src=assets+"/images/re/img_01.jpg", alt="", width="100%")
                .swiper-slide
                    .text
                        h5.f20.f_white 我吃土，你發財！
                        img(src=assets+"/images/icon/edit.svg", alt="")
                    img(src=assets+"/images/re/img_01.jpg", alt="", width="100%")
