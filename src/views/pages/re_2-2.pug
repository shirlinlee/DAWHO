
extends ../includes/hongbao/_layout.pug

block title
    title re_2-2

block scss
    link(rel='stylesheet' href= assets + '/styles/components.css')
    link(rel='stylesheet' href= assets + '/styles/hongbao.css')

include ../includes/hongbao/ui.pug
include ../includes/components.pug
block main
    style(type='text/css').
        body{
            background-image: linear-gradient(
            to bottom,
            #ffeddb,
            #f9f4ee 34%,
            #faf7f3 56%,
            #f9f4ef 77%,
            #ffeddb 99%
            );
            background-image: linear-gradient(339deg, rgba(241, 220, 195, 0.55) 83%, #feeedd 49%);
        }
    div#appHongbao.info
        +_header("搶紅包", 'black')
        +_contentGrab()

block js
    script(src= public + '/lib/js/jquery-1.12.4.min.js' defer)
    script(src= assets + '/js/hongbao.bundle.js' defer)
    script(src= assets + '/js/components.bundle.js' defer)


