extends ../../includes/_layout_open.pug

block title
    title 開戶進度查詢

block scss
block js 

block main
    #appOpen 
        .open-progress
            .progress-line(style="width:35%")
        .view-992
            h1.main-title 銀行帳戶驗證
            p.title-pdm 無法使用數位帳戶進行驗證(如Richart,O-bank)
            form
                .form-group
                    label.form-label(for="bankName") 銀行名稱
                    input.form-control(v-model="bankNameInput", @click="openModal('#searchBankModal')" ,id="bankName", type="text", placeholder="請選擇") 
                    small.form-text.text-danger.f13 required
                .form-group
                    label.form-label(for="bankNumber") 存款帳號
                    input.form-control(id="bankNumber", type="text", placeholder="請輸入選擇銀行的存款帳號", aria-describedby="") 
                    small.form-text.text-danger.f13 required
                .form-group
                    hr.bg-grey
                .form-check.form-group
                    input.styled-checkbox(id="defaultCheck1",type="checkbox", checked="checked")
                    label.styled-label(for="defaultCheck1") 同意開啟金融卡非約定轉帳功能
            .center
                button.btn.btn-primary.disabled(type="submit") 驗證帳戶
        


        //- lightbox
        .modal-backdrop.fade
        .modal.fade#searchBankModal(tabindex="-1",role="dialog", aria-hidden="true")
            .modal-dialog
                .modal-content
                    .modal-header
                        #search-bank-input
                            input.form-control#search-bank(v-model="bankNameInput", type="text", placeholder="搜尋銀行代碼") 
                            .div {{bankNameInput}}
                        button.close(@click.prevent="closeModal('#searchBankModal')",type="button",data-dismiss="modal") 關閉
                    .modal-body-box
                        .modal-body
                            .bank-list
                                ul.bank-list-ul
                                    li.bank-list-li(v-for="(bank,i) in filterBank", :key="i",
                                     @click="bankNameInput = bank.bankName") 
                                        span.code {{bank.bankCode}}
                                        span.name {{bank.bankName}}
                                .bankEmpty {{bankEmpty}}

                    .modal-footer
                        
    
